<h2>Leaderboard</h2>

{{#each this.scores }}
    <div class="row py-2 border-bottom">
        <div class="font-weight-bold col-1">
            <b>{{ incrementByOne @index }}:</b>
        </div>

        <div class="col-2">
            {{!-- {{this}} --}}
            <a href="/games/{{game}}">
                {{ score }} points
            </a>
        </div>

        <div class="col-2 font-italic">
            {{#if account }}
                <a href="/players/{{ account._id }}">
                    {{ account.username }}
                </a>
            {{else}}
                A player
            {{/if}}
        </div>

        <div class="col">
            {{ formatDate create_date }}
        </div>
    </div>
{{/each}}