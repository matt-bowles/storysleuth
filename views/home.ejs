    width: 100%;
    height: 650px;
  }
  
  #guessResult {
    margin: auto;
    width: 50%;
    margin-bottom: 50px;
  }
</style>

<body>

  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
      <div class="container">
        <a class="navbar-brand" href="#">Where Am I?</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item active">
              <a class="nav-link" href="#">Play
                <span class="sr-only">(current)</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">About</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
        <div class="row" id="guessResult">
        </div>
        <div class="row">
          <div class="col-sm">
            <video controls>
              <source src="<%=storyURL%>" type="video/mp4">
            </video>
            <h3 id="timestamp"><%=timestamp%></h3> 
          </div>
          <div class="col-lg">
            <div id="mapid"></div>
            <button type="button" class="btn btn-danger" id="guessButton">Make guess</button>
          </div>
        </div>
      </div>

    
      <!-- Sneakret game info -->
      <p style="visibility: hidden" id="loclat"><%=lat%></p>
      <p style="visibility: hidden" id="loclong"><%=long%></p>

    
</body>

  <script>
    // Define the custom 'real-location' icon
    var locIcon = L.icon({
      iconUrl: 'C:/xampp_install/htdocs/whereami/location-icon.png',
      iconAnchor:   [0, 0], // point of the icon which will correspond to marker's location
    });

    var map = L.map('mapid', {
      worldCopyJump: true,
    }).setView([0, 0], 0);
    var markers = [];

    $("#guessButton").attr("disabled", true);


    L.tileLayer('https://api.maptiler.com/maps/voyager/{z}/{x}/{y}.png?key=INrAl64yCwwD46VnyvvG', {
        attribution: '<a href="https://www.maptiler.com/copyright/" target="_blank">© MapTiler</a> <a href="https://www.openstreetmap.org/copyright" target="_blank">© OpenStreetMap contributors</a>'
    }).addTo(map);

    map.on('click', function(e) {
      if (!markers['locMarker']) {
      // Get coords of where the user clicked
      lat = e.latlng.lat;
      lon = e.latlng.lng;
      
      // Remove guess marker if it has already been placed
      if (markers['guessMarker'] != undefined) {
        map.removeLayer(markers['guessMarker']);
      };

      // Add marker
      markers['guessMarker'] = L.marker([lat, lon]).addTo(map);

      // Allow user to make guess
      $('#guessButton').attr("disabled", false);
      $('#guessButton').removeClass("btn-danger");
      $('#guessButton').addClass("btn-success");
    }
    });

    $('#guessButton').click(function(e) {
      e.preventDefault();

      if (!markers['locMarker']) {
        var locLat = $('#loclat').text();
        var locLong = $('#loclong').text();

        // add location marker

        markers['locMarker'] = L.marker([locLat, locLong], {icon: locIcon}).addTo(map);

        // calculate distance between guess and location

        var latlngs = Array();

        latlngs.push(markers['guessMarker'].getLatLng());
        latlngs.push(markers['locMarker'].getLatLng());
        var polyline = L.polyline(latlngs, {color: 'red'}).addTo(map);

        // display info
        var dist = getDistanceFromLatLonInKm(locLat, locLong, lat, lon);
        $('#guessResult').html(`Your guess was <b> ${dist} km</b> away from the correct location.`);

        // fly to actual location
        map.flyTo(markers['locMarker'].getLatLng());

      }

    });

    function getDistanceFromLatLonInKm(lat1,lon1,lat2,lon2) {
    var R = 6371; // Radius of the earth in km
    var dLat = deg2rad(lat2-lat1);  // deg2rad below
    var dLon = deg2rad(lon2-lon1); 
    var a = 
      Math.sin(dLat/2) * Math.sin(dLat/2) +
      Math.cos(deg2rad(lat1)) * Math.cos(deg2rad(lat2)) * 
      Math.sin(dLon/2) * Math.sin(dLon/2); 
    var c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1-a)); 
    var d = R * c; // Distance in km

    // Round it up and return
    return " " + (Math.round(d * 100) / 100) + " ";
    }

  function deg2rad(deg) {
    return deg * (Math.PI/180)
  }
  </script>

</html>