{{!-- Guess result goes here (hidden by default) --}}
<div class="row" id="postRound" hidden>
  <div class="row justify-content-center" id="guessResult" style="margin: auto;"></div>

  <div class="progress mt-2" style="width: 66%; margin: auto;">
    <div id="prog" class="progress-bar" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
  </div>

</div>
  

  {{!-- Main container--}}
  <div class="parent">

    {{!-- Media player --}}
    <div class="p-2 border border-dark flex" id="idklmao">
      <div id="media_content" class="embed-responsive">
        <img id="image_display" src="/img/loading.png" class="embed-responsive-item">
        <video controls id="video_player" style="display: none" class="embed-responsive-item">
        </video>
      </div>
      <!-- Start with default story - no. 0 in json array -->

      <hr>

      <div class="mt-3" >
        <div id="buttons-timestamp-container">
          <!-- Story nav buttons -->
          <div id="story-buttons" style="margin-left: auto">
            <button id="prevBtn" class="btn btn-info" onclick="prevStory()" disabled="disabled" style="width: 49%">◄ Prev. clue</button>
            <button id="nextBtn" class="btn btn-info" onclick="nextStory()" style="width: 49%">Next clue ►</button>
          </div>
          <h5 id="timestamp">Loading...</h5> 
        </div>
      </div>
      
      </div>

      {{!-- Map --}}
      <div class="p-2 border border-dark flex-fill">
        {{>scorecard}}
      <div id="map"></div>

      <div class="mt-3 d-inline-flex">
        <button type="button" class="btn btn-success" id="guessButton" onclick="makeGuess()" disabled="disabled">Make guess</button>
        <button type="button" class="btn btn-primary" id="nextRoundBtn" onclick="initaliseNewRound()">Next round</button>   
        <button type="button" class="btn btn-primary" id="btnPlayAgain" onclick="resetGame()" hidden>Play again?</button>   
        
        <div class="ml-3" id="shareBox" hidden>
          Share your game: <a id="scoreLink" target="_BLANK"><b>here</b></a>
        </div>
      </div>
      
    </div>
  </div>






{{!-- Holds data for a previous game (that is being viewed)
Can obviously be empty --}}
<form>
  <input type="hidden" name="gameData" id="gameData" value="{{ gameData }}">
</form>